                        </li>
                        <li>
                            <a href="/Admin/Config/Organization/Index">
                                <i class="fa fa-share-alt"></i>组织机构管理
                            </a>
                        </li>
                        <li>
                            <a href="/Admin/Config/Message/Index">
                                <i class="fa fa-bell-o"></i>消息提醒设置
                            </a>
                        </li>
                        <li>
                            <a href="/Admin/Config/CaseType/Index">
                                <i class="icon-docs"></i>案件类别管理
                            </a>
                        </li>
                        <li>
                            <a href="/Admin/Config/Court/Index">
                                <i class="fa fa-bank"></i>法院管理
                            </a>
                        </li>
                        <li>
                            <a href="/Admin/Config/Region/Index">
                                <i class="fa fa-map-o"></i>地域管理
                            </a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a href="/Admin/Config/Home/Index">
                                <i class="fa fa-cog"></i>系统设置
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        return;
