@model EasyFast.Application.UserType.Dto.UserTypeInput

@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Iframe.cshtml";
}

@{
    Layout = "~/Areas/Admin/Views/Shared/_Iframe.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model=>model.Id)
    @Html.HiddenFor(mode=>mode.RowVersion)
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label for="Name" class="control-label col-xs-2">类别名称</label>
            <div class="col-xs-10">
                <div class="input-group">
                    <div class="input-group-addon"><i class="fa fa-user"></i></div>
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="OrderId" class="control-label col-xs-2">排序ID</label>
            <div class="col-xs-10">
                <div class="input-group">
                    <div class="input-group-addon"><i class="fa fa-sort-numeric-desc"></i></div>
                    @Html.EditorFor(model => model.OrderId, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                @Html.ValidationMessageFor(model => model.OrderId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="Remarks" class="control-label col-xs-2">备注信息</label>
            <div class="col-xs-10">
                @Html.TextAreaFor(model => model.Remarks, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Remarks, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10 form-actions text-center">
                <button type="submit" class="btn btn-primary"><i class="fa fa-check"></i>提交</button>
                <button type="button" class="btn btn-default" onclick="parent.CloseAllWindosFromLayer()"><i class="fa fa-reply"></i>返回</button>
            </div>
        </div>
    </div>
}

@section scripts {
    <script>
        @if (@ViewBag.Result == true)
        {
            @:iframeResult();
        }
    </script>
}
